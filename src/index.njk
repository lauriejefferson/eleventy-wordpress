    </div>
  </div>
</section>
<section class="pinned flow full-width content-grid">
  {% set featuredLink = links.reverse().slice(0,1) %}
  {% set featuredPost = posts.reverse().slice(0,1) %}

  <h2>Featured</h2>
  <div class="post">
    <h3 class="post__link"><a href="/" class="accent">{{ featuredPost[0].title.rendered }}</a></h3>
    <p>{{ featuredPost[0].acf.summary | safe }}</p>
  </div>
  <div class="links">
    <h3 class="links__item"><a href="/" class="accent">{{ featuredLink[0].title}}</a></h3>
    <p>{{featuredLink[0].description}}</p>
  </div>
</section>
<section class="posts flow full-width content-grid">
  <h2>Latest Posts</h2>
  <div class="grid">
    {%- for post in posts %}
    <div class="post">
      <h3 class="post__link">
        <a href="/posts/{{ post.slug }}" class="accent">{{
          post.title.rendered
        }}</a>
      </h3>
      <p class="post__summary">{{ post.acf.summary }}</p>
      <small>{{ post.date | postDate }}</small>
      <div class="post__tags">
        {%- for tag in post.tags %} {% for tagName in tags %} {% if tag ==
        tagName.id %}
        <a class="tag">{{ tagName.name }}</a>
        {% endif %} {% endfor -%} {% endfor -%}
      </div>
    </div>
    {% endfor -%}
</div>
</section>
<section class="links flow full-width content-grid">
  <h2>Recent Links</h2>
  <div class="grid">
    {%- for link in links | reverse %}
    <div class="links">
      <h3 class="links__item">
        <a href="{{ link.url | url }}" class="accent">{{ link.title }}</a>
      </h3>
      <p class="links__text">{{ link.description }}</p>
    </div>
    {% endfor -%}
  </div>
  <h4><a href="/links" class="accent">Get All Links</a></h4>
  
</section>

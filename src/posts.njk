---
layout: default.njk
eleventyExcludeFromCollections: true
title: 'Posts'
pagination:
  data: posts
  size: 5
  alias: postsPage
  reverse: true
---
<div class="container">
  <article class="post">
    <h1 class="post__title">{{ title }}</h1>
    {%- for post in postsPage %}
    <div class="post flex-col">
      <a href="{{ post.slug }}/" class="post__link"
        >{{ post.title.rendered }}
      </a>
      <small>{{ post.date | postDate }}</small>
      <p>{{ post.acf.summary }}</p>
      <div class="post__tags">
        {%- for tag in post.tags %}
          {% for tagName in tags %}
            {% if tag == tagName.id %}
              <a href="" class="tag">{{ tagName.name }}</a>
            {%endif%}
          {% endfor -%}
      {% endfor -%}
      </div>
    </div>
    {% endfor -%}
  </article>
</div>

---
layout: page.liquid
pagination: 
    data: posts
    size: 5
    alias: posts
    reverse: true
---

{% for post in posts %}
    <article class="post flex-col">
        <a href="/{{ post.slug }}/" class="title">{{ post.title.rendered}} </a>
        <small class="date">{{ post.date | postDate }}</small>
        <p>{{ post.acf.summary }}</p>
        <div class="post__tags">
        {% for tag in post.tags %}
            {% for tagName in tags %}
                {% if tag == tagName.id %}
                    <a href="" class="tag">{{ tagName.name }}</a>
                {%endif%}
            {% endfor %}
        {% endfor %}
        </div>
        </div>
    </article>
{% endfor %}
